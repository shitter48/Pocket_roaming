// 上傳圖片到imgur
var file = document.getElementById("upload");
        var form = new FormData();
        file.addEventListener("change", ev => {
            form.append("image", ev.target.files[0])
        })
        // form.append('image', 'wavinfo.png');
        form.append('type', 'file');



        $(".btn").on("click", function () {
            console.log($("#upload").val());
            var settings = {
                async: true,
                crossDomain: true,
                url: 'https://api.imgur.com/3/image',
                method: 'POST',
                headers: {
                    authorization: 'Bearer 7bd51cbe0e6e4455fdfc08ddc2743a83d34fea81',
                },
                processData: false,
                contentType: false,
                mimeType: 'multipart/form-data',
                data: form,
            };

            $.ajax(settings).done(function (response) {
                console.log(JSON.parse(response).data.link);
                $("#imgsrc").append(
                    `<img src="${JSON.parse(response).data.link}" title="source: imgur.com"/ >`
                )
            });
        })


